---
interface Props {
	title?: string;
	subTitle?: string;
}

const { title, subTitle } = Astro.props;
---

<div class="section-card">
	{title && <h2 class="section-card-title">
		{title}
	</h2>}
	{subTitle && <p class="section-card-subtitle">
		{subTitle}
	</p>}
	<slot/>
</div>

<style>
	.section-card{
		background-color: white;
		box-shadow: 0px 0px 10px black;
		border-radius: 6px;
		padding: 25px;
		margin: 10px;
	}
	.section-card-title{
		font-size: 2em;
		font-family: "Yantramanav", sans-serif;
		text-align: center;
		margin-top: 25px;
	}
	.section-card-subtitle{
		text-align: center;
		margin-top: 15px;
        line-height: 1.5em;
	}
	@media (width >= 768px){
		.section-card{
			margin: 10px 20px;
		}
		.section-card-subtitle{
			margin-bottom: 60px;
		}
	}
	@media (width >= 1024px){
		.section-card{
			margin: 50px 10%;
		}
	}
	@media (width >= 1444px){
		.section-card{
			margin: 50px 20%;

		}
	}

</style>
