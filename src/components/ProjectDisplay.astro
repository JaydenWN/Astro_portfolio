---
interface Props {
    title : string;
    description : string;
    img: string;
    href: string;
}


const {title, description, img, href} = Astro.props;
---
<div class="project-display">
<a href={href}>
    <h3>{title}</h3>
    <div class="image-container">
        <img src={img} alt={description}>
    </div>
    <p>{description}</p>
</a>
</div>

<style>
    .project-display{
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 60px 0px;
    }
    .project-display a{
        text-decoration: none;
        text-align: center;
        gap: 15px;
        display: flex;
        flex-direction: column;

    }
    h3{
        margin: 5px 0px;
    }
    .image-container {
        border: 10px solid var(--site-color-dark);
        background-color: var(--site-color-dark);
        border-radius: 6px;
        display: flex;
    }
    .image-container img{
        width: 100%;
        height: 200px;
        background-color: transparent;
        border-radius: 6px;
    }
    @container projects-container (width >= 768px){
        .project-display{
            width: 50%;
        }
    }
</style>