---
interface Props{
    name: string;
    description:  string;
    icon?: string;
    iconAlt?: string;
}

const {name, description, icon, iconAlt} = Astro.props;
---

<div class="technology-card">
    <img src={icon} alt={iconAlt}/>
    <div>
        <h3 class="techName">{name}</h3>
        <p>{description}</p>
    </div>
</div>

<style>
    .technology-card{
        display: flex;
        gap: 25px;
        margin-bottom: 60px;
    }
    .technology-card:first-of-type{
        margin-top: 65px;
    }
    .technology-card:last-of-type{
        margin-bottom: 65px;
    }
    .technology-card div{
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .technology-card img{
        width: 55px;
        height: 55px;
    }
    .techName{
        font-size: 1.2em;
    }
    p{
        line-height: 1.5em;
    }
    @container technology-container (width >= 698px){
        .technology-card{
          flex-direction: column;
          align-items: center;
          min-width: 50%;
        }
        .techName{
            text-align: center;
        }
        .technology-card:first-of-type{
            margin-top: 0px;
        }
        .technology-card:last-of-type{
            margin-bottom: 0px;
        }
    }
    @container technology-container (width >= 1000px){
        .technology-card, .technology-card:first-of-type{
            min-width: 50%;
            margin: 6% 0px;
        }
    }
</style>